import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

public class practicaprueba1 {
	public static int muestraContenido(String fichero, int numlineas) throws FileNotFoundException, IOException{ //Esta función se encarga de mostrar el contenido del interior del fichero
		String cadena;
		FileReader f =new FileReader(fichero);
		BufferedReader b = new BufferedReader(f);
		while((cadena=b.readLine())!=null) {
			System.out.println(cadena);
			numlineas ++; //El contador numlineas se utiliza para saber la cantidad de lineas de la matriz. Su valor se incrementa en 1 por cada vez que se muestra una linea por pantalla.
		}
		b.close();
		return numlineas;
	}
	public static void copiaContenido(String fichero, int numlineas)throws FileNotFoundException, IOException{
		System.out.println();//Para separar una matriz de la otra
		String cadena;
		int n; //Filas
		int m; //Columnas
		int letra=0;//Se usa para ir mostrando cada caracter
		int linea=0; //Contador para las lineas
		String datos [] = new String[numlineas]; //Se crea un vector de tamaño de las líneas en el que se guarda la informacion que hay en cada linea
		int contador=0;
		FileReader f =new FileReader(fichero);
		BufferedReader b = new BufferedReader(f);
		while(((cadena=b.readLine())!=null)&&(contador<numlineas)) {
			datos[contador]=cadena;
			contador++;
		}
		b.close();
		//Aqui empezamos a copiar la matriz
		n=Integer.parseInt(datos[0]);//Se transforma cada string a int
		m=Integer.parseInt(datos[1]);
		char matriz [][] =new char [n][m];
		for(int i=0; i<n;i++) {
			for(int j=0; j<m;j++) {
				String c=datos[linea+2];//Se le suma dos porque las dos primeras lineas son de filas y columnas y se utiliza el caracter porque va a ser el mismo contador
				matriz[i][j]=c.charAt(letra);//Caracter porque va a tener los mismos caracteres que columnas
				System.out.print(matriz[i][j]);
				letra++;
			}
			letra=0;//Se reinicia el contador para que no salga del rango
			linea++;//Se aumenta el contador de linea aqui porque tiene que cargar una linea por cada columna
			System.out.println("");
		}
		empiezaJuego(matriz,n,m);
	}
	public static void crearFichero(char [][]matriz,int fila,int columna,String fichero_salida) throws IOException{
		File archivo=new File(fichero_salida); 
		BufferedWriter bw;
		if(archivo.exists()) {
			bw=new BufferedWriter(new FileWriter(archivo));
			bw.write(fila + "\n"); //Se escribe la matriz en el fichero mediante un bucle
			bw.newLine();
			bw.write(columna + "\n");
			bw.newLine();
			for(int i=0;i<fila;i++) {
				for(int j=0;j<columna-1;j++) {
				bw.write(matriz[i][j]);
				}
				bw.newLine();
				}
		}else {
			bw=new BufferedWriter(new FileWriter(archivo)); //Si el archivo no existe crea uno nuevo 
			bw.write(fila + "\n");
			bw.newLine();
			bw.write(columna + "\n");
			bw.newLine();
			for(int i=0;i<fila;i++) {
				for(int j=0;j<columna;j++) {
				bw.write(matriz[i][j]);
				}
				bw.newLine();
				}
		}
		bw.close();
	}
	public static void empiezaJuego(char [][] matriz, int x, int y) throws IOException {
		Scanner in =new Scanner(System.in);
		int contador=0;
		System.out.print("Numero de iteraciones que desea: ");
		int iteracion=in.nextInt();
		System.out.println();
		Scanner f=new Scanner(System.in);
		System.out.println("Introduce el nombre del fichero de salida: ");
		String fichero_salida=f.nextLine();
		System.out.println();
		long tiempo_inicio=System.currentTimeMillis();
		int viva=0;
		int muerta=0;
		//Si una celula muerta está rodeada por exactamente 3 células vivas pasa a estar viva
		//Si una célula viva no esta rodeada por dos o tres células vivas muere
		/*
		 * Vamos a crear una matriz copia para que cada paso se guarde en una nueva matriz
		 * 
		 */
		while(contador!=iteracion) {
			matriz=ampliaMatriz(matriz, x, y);
			x=matriz.length;//Conseguir el numero de filas que ha aumentado
			y=matriz[0].length;//Conseguir el numero de columnas que ha aumentado
			char [][] matrizcopia=new char[x][y];			
			for(int i=0; i<x;i++) {
				for(int j=0;j<y;j++) {
					matrizcopia[i][j]=matriz[i][j];
				}
			}
			for(int i=0;i<x;i++) {
				for(int j=0;j<y;j++) {
					if((i!=0)&&(j!=0)&&(i!=(x-1))&&(j!=(y-1))) {
						if(matriz[i][j]=='.') {
							if(matriz[i-1][j]=='X') { //Comprobaciones condicionales de cada célula del tablero
								viva++;
							}
							if(matriz[i+1][j]=='X') {
								viva++;
							}
							if(matriz[i][j-1]=='X') {
								viva++;
							}
							if(matriz[i][j+1]=='X') {
								viva++;
							}
							if(matriz[i-1][j-1]=='X') {
								viva++;
							}
							if(matriz[i+1][j-1]=='X') {
								viva++;
							}
							if(matriz[i-1][j+1]=='X') {
								viva++;
							}
							if(matriz[i+1][j+1]=='X') {
								viva++;
							}
						}
						if(matriz[i][j]=='X') {
							if(matriz[i-1][j]=='X') {
								muerta++;
							}
							if(matriz[i+1][j]=='X') {
								muerta++;
							}
							if(matriz[i][j-1]=='X') {
								muerta++;
							}
							if(matriz[i][j+1]=='X') {
								muerta++;
							}
							if(matriz[i-1][j-1]=='X') {
								muerta++;
							}
							if(matriz[i+1][j-1]=='X') {
								muerta++;
							}
							if(matriz[i-1][j+1]=='X') {
								muerta++;
							}
							if(matriz[i+1][j+1]=='X') {
								muerta++;
							}
						}					
					}
					if(i==0) {
						if(j==0) {
							if(matriz[i][j]=='.') {
								if(matriz[i+1][j]=='X') {
									viva++;
								}
								if(matriz[i][j+1]=='X') {
									viva++;
								}
								if(matriz[i+1][j+1]=='X') {
									viva++;
								}
							}						
						}
						if(j==(y-1)) {
							if(matriz[i][j]=='.') {
								if(matriz[i+1][j]=='X') {
									viva++;
								}
								if(matriz[i][j-1]=='X') {
									viva++;
								}
								if(matriz[i+1][j-1]=='X') {
									viva++;
								}
							}							
						}
						if((j!=0)&&(j!=(y-1))) {
							if(matriz[i][j]=='.') {
								if(matriz[i+1][j]=='X') {
									viva++;
								}
								if(matriz[i][j-1]=='X') {
									viva++;
								}
								if(matriz[i][j+1]=='X') {
									viva++;
								}

								if(matriz[i+1][j-1]=='X') {
									viva++;
								}
								if(matriz[i+1][j+1]=='X') {
									viva++;
								}
							}							
						}						
					}					
					if(i==x-1) {
						if(j==0) {
							if(matriz[i][j]=='.') {
								if(matriz[i-1][j]=='X') {
									viva++;
								}
								if(matriz[i][j+1]=='X') {
									viva++;
								}
								if(matriz[i-1][j+1]=='X') {
									viva++;
								}
							}							
						}
						if(j==(y-1)) {
							if(matriz[i][j]=='.') {
								if(matriz[i-1][j]=='X') {
								viva++;
								}
								if(matriz[i][j-1]=='X') {
									viva++;
								}
								if(matriz[i-1][j-1]=='X') {
									viva++;
								}
							}							
						}
						if((j!=0)&&(j!=y-1)) {
							if(matriz[i][j]=='.') {
								if(matriz[i-1][j]=='X') {
									viva++;
								}
								if(matriz[i][j-1]=='X') {
									viva++;
								}
								if(matriz[i][j+1]=='X') {
									viva++;
								}
								if(matriz[i-1][j-1]=='X') {
									viva++;
								}
								if(matriz[i-1][j+1]=='X') {
									viva++;
								}
							}							
						}
					}
					if(j==0) {
						if(i!=0&&i!=x-1) {
							if(matriz[i][j]=='.') {
								if(matriz[i-1][j]=='X') {
									viva++;
								}
								if(matriz[i+1][j]=='X') {
									viva++;
								}
								if(matriz[i][j+1]=='X') {
									viva++;
								}
								if(matriz[i-1][j+1]=='X') {
									viva++;
								}
								if(matriz[i+1][j+1]=='X') {
									viva++;
								}
							}							
						}
					}
					if(j==y-1) {
						if(i!=0&&i!=x-1) {
							if(matriz[i][j]=='.') {
								if(matriz[i-1][j]=='X') {
								viva++;
								}
								if(matriz[i+1][j]=='X') {
									viva++;
								}
								if(matriz[i][j-1]=='X') {
									viva++;
								}
								if(matriz[i-1][j-1]=='X') {
									viva++;
								}
								if(matriz[i+1][j-1]=='X') {
									viva++;
								}
							}							
						}
					}					
					if(viva==3) {				//Si hay 3 células vivas alrededor la célula pasa a estar viva (X)
						matrizcopia[i][j]='X';						
					}
					else{	
						if(muerta<2||muerta>3) { //Si hay 1 o más de 3 celulas vivas alrededor la celula muere (.)
							matrizcopia[i][j]='.';
						}
					}										
					viva=0;	//Se reinician los contadores
					muerta=0;
				}
			}
			for(int n=0; n<x;n++) {	//La matriz se copia en matrizcopia
				for(int m=0;m<y;m++) {
					matriz[n][m]=matrizcopia[n][m];
				}
			}
			contador++;
		}
		matrizFinal(matriz,x,y,iteracion,tiempo_inicio,fichero_salida);
		}
	public static int celulasVivas(char [][] matriz, int x, int y) {
		int contador=0;
		for(int i=0;i<x;i++) {
			for(int j=0;j<y;j++) {
				if(matriz[i][j]=='X') { //Se cuentan las células vivas que hay en la matriz
					contador++;
				}
			}
		}
		return contador;
	}
	public static void matrizFinal(char [][] matriz, int x, int y, int iteracion, long tiempo_inicio,String fichero_salida) throws IOException {
		char matrizcopia[][]=new char[x][y];
		int reducir_fila=1;	//Este método se usa para reducir la matriz final en caso de que haya filas o columnas formadas por células muertas, en cuyo caso se eliminan.
		int reducir_columna=1;
		int contador_fila=0;
		int contador_columna=0;
		for(int i=0;i<x;i++) {
			for(int j=0;j<y;j++) {
				matrizcopia[i][j]='.';
			}
			}
		while(reducir_fila==1||reducir_columna==1) {
			for(int i=0;i<x;i++) {
				for(int j=0;j<y;j++) {
					if((i==0)&&((j!=0)&&(j!=y-1))) {
						if(matriz[i][j]=='X') {
							reducir_fila=0;
						}
						}
					if((j==0)&&((i!=0)&&(i!=x-1))) {
						if(matriz[i][j]=='X') {
							reducir_columna=0;
						}
					}
					}
				}
			
			if(reducir_fila==1) {
				for(int i=0;i<x-1;i++) {
					for(int j=0;j<y;j++) {
						matrizcopia[i][j]=matriz[i+1][j];
					}
				}	
			}
			for(int i=0;i<x;i++) {
				for(int j=0;j<y;j++) {
					matriz[i][j]=matrizcopia[i][j];
				}
			}
			if(reducir_columna==1) {
				for(int i=0;i<x;i++) {
					for(int j=0;j<y-1;j++) {
						matrizcopia[i][j]=matriz[i][j+1];
					}
				}	
			}
			for(int i=0;i<x;i++) {
				for(int j=0;j<y;j++) {
					matriz[i][j]=matrizcopia[i][j];
				}
			}
		}
			for(int i=x-1;i>0;i--) {
				for(int j=0;j<y;j++) {
					if(matriz[i][j]=='X') {
						i=0;
						j=y;
					}
				
				}
				contador_fila++;
			}
			for(int j=y-1;j>0;j--) {
				for(int i=0;i<x;i++) {
					if(matriz[i][j]=='X') {
						i=x;
						j=0;
					}
				}
				contador_columna++;
			}
			for(int i=0;i<x-(contador_fila-1);i++) {
				for(int j=0;j<y-(contador_columna-1);j++) {
					System.out.print(matriz[i][j]);
				}
				System.out.println();
			}
			int fila=matriz.length-(contador_fila-1);
			int columna=matriz[0].length-(contador_columna-1);
			System.out.println("Numero de iteraciones: " + iteracion);
			int celulas_vivas=0;
			celulas_vivas=celulasVivas(matriz,x,y);
			System.out.println("Hay " + celulas_vivas + " celulas vivas");
			System.out.println("Dimensiones: " + fila + "X" + columna);
			crearFichero(matriz,fila,columna,fichero_salida);
			long tiempo_fin=System.currentTimeMillis();
			double tiempo_ejecucion=tiempo_fin-tiempo_inicio;
			System.out.println("Ha tardado " + tiempo_ejecucion/1000 + " segundos");
			System.out.println("Fichero de salida: " + fichero_salida);
		
	}
	public static char [][] ampliaMatriz(char [][] matriz, int x, int y) { //Funcion encargada de ampliar la matriz en caso de que su rango se amplie
		int aumenta=0;
		char [][] nuevamatriz=new char[x][y];
		for(int i=0;i<x;i++) {
			for(int j=0;j<y;j++) {
				if(i==0) {
					if(matriz[i][j]=='X') { //Se dan las condiciones en las que hay que aumentar la matriz (aumenta=1)
						aumenta=1;
					}
				}
				if(i==x-1) {
					if(matriz[i][j]=='X') {
						aumenta=1;
					}
				}
				if(j==0) {
					if(matriz[i][j]=='X') {
						aumenta=1;
					}
				}
				if(j==y-1) {
					if(matriz[i][j]=='X') {
						aumenta=1;
					}
				}
			}
		}
		if(aumenta==1) { //Si el valor de la variable aumenta es 1, la matriz se amplia 
			char [][] nuevamatriz1=new char[x+2][y+2];
			//Primero se crea una matriz llena de puntos
			for(int i=0;i<(x+2);i++) {
				for(int j=0;j<(y+2);j++) {
					nuevamatriz1[i][j]='.';
				}
			}
			//Ahora se guarda la matriz en medio de la otra y que ésta quede rodeada de puntos
			for(int i=0;i<x;i++) {
				for(int j=0;j<y;j++) {
					nuevamatriz1[i+1][j+1]=matriz[i][j];
				}
			}
			matriz=nuevamatriz1;
			x=x+2;
			y=y+2;
		}
		if(aumenta!=1) {
			nuevamatriz=matriz;
		}
		return matriz;
	}
	public static void main(String[] args) throws IOException {
		// TODO Auto-generated method stub
		int numlineas=0;
		int contador=0;
		Scanner in = new Scanner(System.in);
		System.out.println("Introduce el nombre del fichero ");
		String fichero=in.nextLine();
		while(contador==0) {
		if(fichero.equals("exploder.txt")||fichero.equals("gosper.txt")) {
			contador=1;
		}else {
			contador=0;
			System.out.println("Las posibilidades son: ");
			System.out.println();
			System.out.println("exploder.txt");
			System.out.println("gosper.txt");
			System.out.println();
			System.out.println("Introduce el nombre del fichero ");
			fichero=in.nextLine();
		}
		}
		numlineas=muestraContenido(fichero, numlineas);
		copiaContenido(fichero, numlineas);		
	}
}
